<div class="container">
  <h1 class = "my-3">New Game</h1>

  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col-auto">
        <div class="letter-card"><%= letter %></div>
      </div>
    <% end %>
  </div>

  <form action="<%= score_path %>" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters.join %>
    <div class="mb-3">
      <label for="input" class="form-label">What is the longest word you can find?</label>
      <div class="d-flex input-bottom">
        <input type="text" class="form-control" id="input" name="input" required>
        <button type="submit" class="btn btn-primary">Play</button>
      </div>
    </div>

  </form>

</div>
